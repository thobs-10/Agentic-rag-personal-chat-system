FROM python:3.11-slim

WORKDIR /app

# Copy dependency files
COPY pyproject.toml /app/
COPY README.md /app/

# Copy source code
COPY src/ /app/src/

# Install dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -e .

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the backend API
# CMD ["uvicorn", "src.agentic_rag_personal_chat_system.backend.src.api.router:app", "--host", "0.0.0.0", "--port", "8000"]
# Lets use a generic command to just keep the container running
CMD ["tail", "-f", "/dev/null"]